
@model Twitter.Models.MainPageModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
    var user = Model.User;
}


<style>
    .comment-at {
        cursor: pointer;
    }
</style>
<section style="width:100%" class="tweetle">
    <div class="row">
        <div class="col-md-2 post-pp" style="margin:0px;">
            <img class="rounded-circle img-fluid"
                 style="height:60px; width: 60px; border:1px  #eef0f2 solid; margin-left: 0.7rem;"
                 src="@user.ProfilePicture"
                 alt="">
        </div>
        <div class="col-md-10 post-content">
            <div class="row" style="padding: 0px; margin: 0px;">
                <input type="text" class="neler-oluyor" placeholder="Neler Oluyor">
            </div>
            <div style="padding-top:10px;" class="row icon-button">
                <div class="col-md-8" style="float: left;">
                    
                </div>
                <div class="col-md-4 post-button" style="text-align: right; float:right;">
                    <button type="button"
                            class="btn btn-primary tweetle-button">
                        <b>Tweet</b>
                    </button>
                </div>
            </div>
        </div>

    </div>
</section>
@foreach (var item in Model.usersFriendsPost)
{
    <div class="tweet-link user-post" href="">
        <div class="row tweet">
            <div class="col-md-2">
                <img class="rounded-circle img-fluid"
                     style="height:60px; width: 60px; border:1px  #eef0f2 solid; margin-left: 0.7rem;"
                     src="@item.UserProfilePicture"
                     alt="">
            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-11">
                        <diw class="row">
                            <span style="padding-left: 0px;"><b>@item.UserName @item.UserSurname</b> </span>
                        </diw>
                        <div class="row">
                            @item.PostContent
                        </div>
                        <div class="row">
                                <img style="width: 100%; padding:0px; height:300px; border-radius: 25px; margin-top:5px;"
                                     src="https://images.unsplash.com/photo-1589652717521-10c0d092dea9?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="">
                          
                        </div>
                        <div class="row post-buttons">
                            <div class="col-md-3 postButton">
                                <span id="@item.ID" class="comment-at"><i id="@item.ID" class="far fa-comment"></i></span>
                            </div>
                            <div class="col-md-3 postButton">
                                <i class="fas fa-retweet"></i>
                            </div>
                            <div class="col-md-3 postButton">
                                <i class="far fa-heart"></i>
                            </div>
                            <div class="col-md-3 postButton">
                                <i class="fas fa-share-square"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1" style="text-align:center">
                        <i class="fas fa-ellipsis-h"></i>
                    </div>

                </div>
            </div>
        </div>

    </div>
    @*Yorumlar*@
<div class="row yorumlar" style="width:100%">
    @foreach (var comment in item.postComments)
    {
        <div style="width:100%" class="tweet-link user-post" href="">
            <div class="row tweet">
                <div class="col-md-2">
                    <img class="rounded-circle img-fluid"
                         style="height:60px; width: 60px; border:1px  #eef0f2 solid; margin-left: 0.7rem;"
                         src="@comment.UserProfilePicture"
                         alt="">
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <b>@comment.UserNameSurname</b>
                    </div>
                    <div class="row">
                        <p>@comment.CommentContent</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}





